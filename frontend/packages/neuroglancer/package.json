{
  "name": "neuroglancer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "pnpm generate-interface && vite build && tsc --build",
    "lint": "eslint src --report-unused-disable-directives --fix",
    "preview": "vite preview",
    "prebuild": "eslint .",
    "format": "prettier --cache -w -l .",
    "generate-interface": "pnpm download-schemas && quicktype -s schema viewer_state.yml layer.yml -o src/NeuroglancerState.ts --just-types --nice-property-names && sed -i '1i// Do not modify this file: it is generated from JSON schemas defined in Neuroglancer.' src/NeuroglancerState.ts",
    "download-schemas": "wget -N https://raw.githubusercontent.com/google/neuroglancer/refs/heads/master/docs/json_schema/viewer_state.yml -O viewer_state.yml && wget -N https://raw.githubusercontent.com/google/neuroglancer/refs/heads/master/docs/json_schema/layer.yml -O layer.yml"
  },
  "dependencies": {
    "neuroglancer": "git+https://github.com/google/neuroglancer.git#master",
    "pako": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/pako": "^2.0.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "quicktype": "^23.0.171",
    "prettier": "3.4.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.0.1"
  }
}
